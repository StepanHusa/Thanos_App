<Window x:Class="Thannos_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Thannos_App"
        mc:Ignorable="d"
        Title="Thannos App"
        Height="500"
        Width="750"
        ResizeMode="CanMinimize">
    <Grid>
        <Image x:Name="background"
               Source="background.jfif"
               Stretch="UniformToFill"/>
        <Button 
            x:Name="selectButton"
            Margin="100"
            Background="#A2505050"
            Click="selectButton_Click">
            <Label Content="Select Folder"/>
        </Button>
        <Image x:Name="finalImage"
               Source="bcORw8j.jpg"
               Stretch="UniformToFill"
               Visibility="Hidden"/>
        <Label x:Name="labelDelete"
               Content="Half of the files was succesfully deleted"
               Foreground="White"
               Visibility="Hidden"/>
    </Grid>
</Window>
